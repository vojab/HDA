    </div>
    <footer>
        <div class="content-wrapper">
            <div id="footer">
                <div class="container">
                    <hr>
                    <p class="muted credit text-center">
                        &copy; @DateTime.Now.Year - <strong>HDA v3.0</strong>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
